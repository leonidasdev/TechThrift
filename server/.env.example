# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Security
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SEARCH_RATE_LIMIT_WINDOW_MS=300000
SEARCH_RATE_LIMIT_MAX_REQUESTS=50

# Amazon SP-API Configuration (Optional)
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_PARTNER_TAG=your_amazon_partner_tag
AMAZON_MARKETPLACE_ID=A1RKKUPIHCS9HS

# PCComponentes API Configuration (Optional)
PCCOMPONENTES_API_KEY=your_pccomponentes_api_key
PCCOMPONENTES_API_SECRET=your_pccomponentes_api_secret

# Database Configuration (if using external DB)
DATABASE_URL=your_database_url

# Email Configuration (for price alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Monitoring and Analytics (Optional)
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_id

# Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_INTERVAL_HOURS=6
SCRAPING_DELAY_MS=2000
SCRAPING_MAX_RETRIES=3
SCRAPING_TIMEOUT_MS=30000

# Proxy Configuration (Optional)
PROXY_URL=your_proxy_url
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password